<h1>Party list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Start</th>
            <th>End</th>
            <th>Place</th>
            <th>Host</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('party_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.Name }}</td>
            <td>{% if entity.Start %}{{ entity.Start|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.End %}{{ entity.End|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.Place }}</td>
            <td>{{ entity.Host }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('party_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('party_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('party_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
